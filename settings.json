{
  // VSCode user settings file
  // On Windows: %APPDATA%\Code\User\settings.json
  // On Mac:     $HOME/Library/Application Support/Code/User/settings.json

  // Remove CodeLens clutter from UI
  "editor.codeLens": false,
  "dotnet-test-explorer.showCodeLens": false,
  "csharp.testsCodeLens.enabled": false,
  "csharp.referencesCodeLens.enabled": false,

  // Tabs and indentation
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,

  // Width indicator
  "editor.rulers": [ 120 ],

  // Code editing behavior
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true
}
