{
  "_comment0_" : [
    "VSCode user settings file locations:",
    "On Windows: %APPDATA%/Code/User/settings.json",
    "On Mac:     $HOME/Library/Application Support/Code/User/settings.json"
  ],

  "_comment1_": "Remove CodeLens clutter from UI",
  "editor.codeLens": false,
  "dotnet-test-explorer.showCodeLens": false,
  "csharp.testsCodeLens.enabled": false,
  "csharp.referencesCodeLens.enabled": false,

  "_comment2_": [
    "Tabs and indentation",
    "I want the default indent to be 2 spaces but I also want to respect language specific settings, e.g. Python (4)"
  ],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,

  "_comment3_": "Add a visible vertical line indicator at 120 characters",
  "editor.rulers": [ 120 ],

  "_comment4_": "Code editing behavior",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true
}
